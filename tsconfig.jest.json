{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/types/*.d.ts",
    "setupTests.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}